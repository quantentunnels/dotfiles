[user]
	name = Marius Hintsche
	email = marius.hintsche@uni-potsdam.de
[color]
	ui = auto
[pack]
	threads = 0
[core]
	editor = vim
	excludesfile = /home/marius/.gitignore_global
	autocrlf = input
    #pager = less -r #leads to unwanted line breaks in git log
[instaweb]
	browser = firefox
[gui]
	fontui = -family \"DejaVu Sans\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"DejaVu Sans Mono\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
	diffcontext = 3
	encoding = utf-8

[diff]
    tool = vimdiff
[difftool "pdfdiff"]
	cmd = diffpdf \"$LOCAL\" \"$REMOTE\"
[difftool "latexdiff"]
    cmd = git-latexdiff \"$LOCAL\" \"$REMOTE\"
[diff "pdf"]
    textconv = pdf2text
    tool=diffpdf
    word-diff=plain
[diff "dip"]
    textconv = strings

[merge]
    tool = vimdiff

[push]
	default = simple

[alias]
    st = "status -sb"
	wdiff = diff --color-words

    #nice log format:
    #wrap long commit messages
    #lg = "log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %Cgreen(%cr) %C(bold blue)<%an>%Creset %w(65,0,12)%s' --abbrev-commit"
    #truncate commit messages
    lg = "log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %Cgreen(%cr) %C(bold blue)<%an>%Creset %<(50,trunc)%s' --abbrev-commit"
    #original format
    #lg = "log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %w(50,1,2)%s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
    la = "!git lg --graph --all"
